<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">

                @if (!string.IsNullOrWhiteSpace(movie.ImageName))
                {
                    <img src="~/images/@movie.ImageName"
                         class="card-img-top movie-poster"
                         alt="@movie.Title" />
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@movie.Title</h5>

                    <p class="card-text mb-1"><strong>Year:</strong> @movie.Year</p>
                    <p class="card-text mb-1"><strong>Genre:</strong> @movie.Genre</p>

                    @if (!string.IsNullOrWhiteSpace(movie.Description))
                    {
                        <p class="card-text mb-2">@movie.Description</p>
                    }

                    <p class="card-text mb-3">
                        <strong>Rating:</strong> @movie.Rating.ToString("0.#")
                    </p>

                    <div class="mt-auto d-flex gap-2">
                        <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>

        </div>
    }
</div>

